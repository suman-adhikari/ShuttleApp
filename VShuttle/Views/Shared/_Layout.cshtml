<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vshuttle</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand">Verscend shuttle</a>
            </div>

                    
            <div class="navbar-header right-header pull-right">
                @if (Session["Id"] != null)
                {
                    <i class="navbar-brand headerlogin">Welcome, @Session["UserName"]</i>
                    <a class="navbar-brand headerlogin" href="@Url.Action("Index","Logout")">Logout</a>
                }
                else
                {
                   <a class="navbar-brand headerlogin" href="@Url.Action("Index","Login")">Login</a>
                }
               
            </div>

        </div>
    </nav>
    
    <div class="container-fluid">
       
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")    
        @Scripts.Render("~/bundles/jqueryui")
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDq0QcBfmGJaAq5Lu1Ik57BxqRKyY93_jw&libraries=places&language=en"  type="text/javascript"></script>
        @Scripts.Render("~/bundles/ajaxGrid")
        @Scripts.Render("~/bundles/Shared")
        
        @RenderSection("scripts", required: false)

        @Html.Partial("~/Views/Shared/_confirmationMessage.cshtml")
        <script src="~/Scripts/mapcommons.js" type="text/javascript"></script>
        <script src="~/Scripts/pickMap.js" type="text/javascript"></script>
        <script src="~/Scripts/PointInmap.js" type="text/javascript"></script>
        @RenderBody()
       
    </div>
   
</body>
</html>
